<p><h1>Pistas disponibles en <%= @city.name %></h1></p>
<table class="table table-hover">
<% @city.fields.each do |field| %>
    <tr>
      <td>
          <% case field.kind %>
            <% when 'futbol'%>
              <%= link_to image_tag("futbol.jpg", class:"img-rounded", alt: "Futbol"),field_path(field)%>
            <% when 'futsal'%>
              <%= link_to image_tag("polillerena.jpg", class:"img-rounded", alt: "Futbol sala"),field_path(field) %>
            <% when 'padel'%>
              <%= link_to image_tag("padel.jpg", class:"img-rounded", alt: "Padel"),field_path(field) %>
            <% when 'pingpong'%>
              <%= link_to image_tag("pingpong.jpg", class:"img-rounded", alt: "Ping Pong"),field_path(field) %>
            <% when 'tenis'%>
              <%= link_to image_tag("raqueta_tenis.jpg", class:"img-rounded", class:"img-rounded", alt: "Tenis"),field_path(field) %>
          <% end %>
      </td>
      <td>
        <p><h2><%= field.name %></h2></p>
        <p><%= field.other %></p>
      </td>
    </tr>
<% end %>
</table>
