<p id="notice"><%= notice %></p>

<h1>Fields</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Normal price</th>
      <th>Special price</th>
      <th>Active</th>
      <th>Other</th>
      <th>Type</th>
      <th>Url1</th>
      <th>Url2</th>
      <th>Url3</th>
      <th>Entity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.name %></td>
        <td><%= field.normal_price %></td>
        <td><%= field.special_price %></td>
        <td><%= field.active %></td>
        <td><%= field.other %></td>
        <td><%= field.type %></td>
        <td><%= field.url1 %></td>
        <td><%= field.url2 %></td>
        <td><%= field.url3 %></td>
        <td><%= field.entity %></td>
        <td><%= link_to 'Show', field %></td>
        <td><%= link_to 'Edit', edit_field_path(field) %></td>
        <td><%= link_to 'Destroy', field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

